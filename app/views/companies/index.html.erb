<h1>Listing companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Site</th>
      <th>Adress</th>
      <th>Responsible</th>
      <th>Contact</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr id='company_<%= company.id %>'>
        <td><%= company.name %></td>
        <td><%= company.phone %></td>
        <td><%= company.email %></td>
        <td><%= company.site %></td>
        <td><%= company.adress %></td>
        <% @owner = User.find_by(id: company.responsible) %>
        <td><%= link_to @owner.email, account_user_path(company.account_id, company.responsible) %></td>
        <% @contact = Contact.find_by(id: company.contact_id) %>
        <td><%= link_to @contact.name, account_contact_path(company.account_id, company.contact_id) %></td>
        <td><%= company.notes %></td>
        <td><%= link_to 'Show', account_company_path(current_user.account_id, company) %></td>
        <td><%= link_to 'Edit', edit_account_company_path(current_user.account_id, company) %></td>
        <td><%= link_to 'Destroy', account_company_path(current_user.account_id, company), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

