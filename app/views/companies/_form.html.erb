<%= form_for @company , url: account_company_path(current_user.account_id, @company) do |f| %>
  <% if @company.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
      <% @company.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Название" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Телефон" %><br>
    <%= f.text_field :phone %>
  </div>
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :site %><br>
    <%= f.text_field :site %>
  </div>
  <div class="field">
    <%= f.label "Адрес" %><br>
    <%= f.text_area :adress %>
  </div>
  <div class="field">
    <%= f.label "Ответственный" %><br>
    <%= f.collection_select :responsible, current_user.account.users, :id, :email, {include_blank: false} %>
  </div>
  <div class="field">
    <%= f.label "Контакт" %><br>
    <%= f.collection_select :contact_id, current_user.account.contacts, :id, :email, {include_blank: false} %>
  </div>
  <div class="field">
    <%= f.label "Примечание" %><br>
    <%= f.text_area :notes %>
  </div>
  <div class="actions">
    <%= f.submit "Сохранить"%>
  </div>
<% end %>
