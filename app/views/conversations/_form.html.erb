<%= form_for @message , url: account_message_path(current_user.account_id, @message), remote: true do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@message.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <li class='new' id='message_<%= @message.id %>'>
    <%= f.label :recipient_id %>
    <%= f.collection_select :recipient_id, current_user.account.users, :id, :email, {include_blank: false} %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :message %>
    <%= f.text_area :message %>
    <%= f.submit 'add' %>
  </li>

<% end %>