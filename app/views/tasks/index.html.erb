<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Description</th>
      <th>Date</th>
      <th>Responsible</th>
      <th>Account</th>
      <th>Contact</th>
      <th>Company</th>
      <th>Deal</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.type %></td>
        <td><%= task.description %></td>
        <td><%= task.date %></td>
        <td><%= task.responsible %></td>
        <td><%= task.account_id %></td>
        <td><%= task.contact_id %></td>
        <td><%= task.company_id %></td>
        <td><%= task.deal_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

