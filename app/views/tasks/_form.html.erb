<%= form_for @task , url: account_task_path(current_user.account_id, @task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :type_of_task %><br>
    <%= f.text_field :type_of_task %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :responsible %><br>
    <%= f.collection_select :responsible, current_user.account.users, :id, :email, {include_blank: false} %>
  </div>
  <div class="field">
    <%= f.label :contact_id %><br>
    <%= f.collection_select :contact_id, current_user.account.contacts, :id, :email, {include_blank: false} %>
  </div>
  <div class="field">
    <%= f.label :company_id %><br>
    <%= f.collection_select :company_id, current_user.account.companies, :id, :email, {include_blank: false} %>
  </div>
  <div class="field">
    <%= f.label :deal_id %><br>
    <%= f.collection_select :deal_id, current_user.account.deals, :id, :name, {include_blank: false} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
