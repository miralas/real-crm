  <h1>Список пользователей</h1>

  <table>
    <thead>
      <tr>
        <th>Email</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr id='user_<%= user.id %>' >
          <td><%= user.email %></td>
          <td><%= link_to 'Подробнее', account_user_path(user.account_id, user) %></td>
          <td><%= link_to 'Редактировать', edit_account_user_path(user.account_id, user) %></td>
          <td><%= link_to 'Удалить', account_user_path(user.account_id, user), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
        </tr>
        
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Добавить пользователя', new_account_user_path(current_user.account_id) %>
  <%= link_to_function 'Назад', 'history.back()' %>
